<?xml version="1.0"?>
<ruleset name="CustomStandard">
    <description>Custom ruleset Based on PSR2</description>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/storage/framework/views/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/bootstrap/cache/*</exclude-pattern>
    <arg name="extensions" value="php" />
    <rule ref="PSR2">
    </rule>

    <!--すべてのデータベースフォルダ下のファイルのネームスペースをチェックしないように設定する-->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>*/database/*</exclude-pattern>
    </rule>
    <!--OSによりますと、改行コードが違うので、ファイルの改行コードをチェックしないように設定する-->
    <rule ref="Generic.Files.LineEndings">
        <exclude-pattern>*/www/*</exclude-pattern>
    </rule>

</ruleset>